<% @page = "search-index" %>

<div class="row">
  <div class="container">
    <div id="navbar navbar-default">
      <h2>Enter a keyword and enjoy the tweets!</h2>
    </div>

    <div id="search-box">
      <%= form_tag root_path, method: 'get', id: "search-box" do %>
        <div id="search-bar">
          <%= text_field_tag :search, params[:search] %>
        </div>
        <div id="search-button" >
          <%= submit_tag "Let's Search!", name: nil, class: 'button' %>
        </div>
      <% end %>
    </div>
  </div><!-- end container -->
    
    <div id="search-results">
      <%= render 'results' %>
    </div>
  
</div>
